<UserControl x:Class="DianaLLK_GUI.View.TipBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DianaLLK_GUI.View"
             mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="CadetBlue">
        <Label Content="{Binding Tip}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="20" Padding="0"/>
    </Grid>
</UserControl>
